# TradesPro Environment Configuration
# Copy this file to .env and update values

# ============================================
# Application
# ============================================
ENVIRONMENT=development
DEBUG=true
NODE_ENV=development

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tradespro
DB_USER=tradespro_user
DB_PASSWORD=changeme_in_production

# Full database URL (auto-constructed if not provided)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# ============================================
# Services Configuration
# ============================================
API_PORT=8000
CALC_SERVICE_PORT=3001
CALCULATION_SERVICE_URL=http://localhost:3001

# ============================================
# Security & Authentication
# ============================================
# IMPORTANT: Change these in production!
SECRET_KEY=your-super-secret-key-min-32-chars-change-in-production
JWT_SECRET=your-jwt-secret-key-min-32-chars-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:9000,http://localhost:8080,http://localhost:3000

# ============================================
# CEC Table Configuration
# ============================================
# Default code edition for calculations
DEFAULT_CODE_EDITION=2024
DEFAULT_CODE_TYPE=cec

# Supported editions (comma-separated)
SUPPORTED_EDITIONS=2021,2024,2027

# ============================================
# Engine Metadata (CI/CD will inject these)
# ============================================
GIT_COMMIT=dev-local
BUILD_TIMESTAMP=
ENGINE_VERSION=5.0.0

# ============================================
# Nginx Configuration (Production)
# ============================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ============================================
# Email Configuration (for password reset)
# ============================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@tradespro.com
MAIL_USE_TLS=true

# ============================================
# File Storage
# ============================================
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=/app/uploads

# ============================================
# Async Calculation Configuration
# ============================================
# Enable async calculation for complex jobs
ASYNC_CALCULATION_ENABLED=true
ASYNC_THRESHOLD_SECONDS=5
MAX_ASYNC_JOBS=100

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# Bundle Signing Configuration
# ============================================
BUNDLE_SIGNING_ENABLED=true
SIGNING_ALGORITHM=RS256
PRIVATE_KEY_PATH=/app/keys/private.pem
PUBLIC_KEY_PATH=/app/keys/public.pem

# ============================================
# Development Tools
# ============================================
# Enable SQL query logging
SQL_ECHO=false

# Enable API documentation
ENABLE_DOCS=true

# Enable CORS for all origins (development only!)
DEV_CORS_ALL=false